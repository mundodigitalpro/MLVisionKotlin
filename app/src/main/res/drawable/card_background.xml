<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:top="0dp" android:left="4dp" android:right="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_shadow" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Card Layer -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#E2E8F0" />
        </shape>
    </item>
</layer-list>